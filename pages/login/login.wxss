.loginContainer {
	padding: 60rpx;
	/* height: 100%; */
	/* position: relative; */
}

.title {
	font-size: 50rpx;
	margin-bottom: 60rpx;
}

.loginForm {
	display: block;
	width: 100%;
}

.inputItem {
	background-color: rgb(248,246,252);
	padding: 10rpx 20rpx;
	margin-bottom: 50rpx;
}

.inputItem input {
	margin-top: 10rpx;
}

.loginBtn {
	background-color: red;
	color: white;
	width: 100% !important;
	border-radius: 50rpx;
}

.error {
	color: red;
	font-size: 26rpx;
	height: 60rpx;
}

.missPwd {
	text-align: center;
	margin-top: 30rpx;
	color: #00bfff;
}

.register {
	position: absolute;
	bottom: 50rpx;
	left: 0;
	text-align: center;
	width: 100%;
}

.registerLink {
	color: #00bfff;
}


