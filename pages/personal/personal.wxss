.personalContainer {
	height: 100%;
	background-color: #F5F5F5;
}

/* 用户 */
.user {
	position: relative;
}

.user .bgImg {
	width: 100%;
	height: 620rpx;
	opacity: 0.5;
}

.userInfo {
	position: absolute;
	top: 120rpx;
	left: 50rpx;
	display: flex;
	align-items: center;
}

.userInfo .portrait {
	width: 150rpx;
	height: 150rpx;
	margin-right: 10rpx;
	border: 2px solid white;
	border-radius: 50%;
}

/* 会员 */
.userMember {
	box-sizing: border-box;
	position: absolute; 
	top: 300rpx;
	left: 5%;
	background-color: rgba(0, 0, 0, 0.7);
	width: 90%;
	height: 300rpx;
	border-radius: 10rpx;
	color: #f7d680;
	padding: 20rpx;
	z-index: 2;
}

.vipCardImg {
	position: absolute;
	top: 0;
	right: 0;
	width: 380rpx;
	height: 260rpx;
	z-index: -1;
}

.vip {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.vipText .iconfont {
	margin-right: 20rpx;
}

.vipBtn {
	width: 150rpx;
	padding: 5rpx 0;
	border: 1rpx solid #f7d680;
	border-radius: 20rpx;
	color: black;
	background-color: #f7d680;
	text-align: center;
	font-size: 26rpx;
}

.vipInfo {
	margin-top: 50rpx;
}

.infoTitle {
	font-weight: bold;
}

.infoText {
	font-size: 26rpx;
}

/* 中下部导航和菜单 */
.content {
	background-color: #F5F5F5;
	margin-top: -120rpx;
	padding: 20rpx;
	position: relative;
	z-index: 100;
}

/* 导航 */
.nav {
	position: relative;
	z-index: 10;
	margin-bottom: 20rpx;
}
.arc {
	width: 100%;
	height: 36rpx;
	position: absolute;
	top: -34rpx;
	left: 0;
}

.navbar {
	background-color: #fff;
	display: flex;
	justify-content: space-around;
	padding: 20rpx 0;
	border-radius: 16rpx;
}

.navItem {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.navItem .iconfont {
	color: #F01313;
	font-size: 50rpx;
	margin-bottom: 10rpx;
}

.navItem text {
	font-size: 26rpx;
}

/* 底部菜单 */
.menu {
	background-color: #fff;
	border-radius: 16rpx;
}

.recentPlay {
	color: gray;
	padding: 0 10rpx;
}

.record {
	margin-top: 20rpx;
	padding: 0 10rpx;
}

.menuItem {
	border-top: 1rpx solid #F5F5F5;
	padding: 30rpx 10rpx;
	display: flex;
	justify-content: space-between;
	font-size: 28rpx;
}


