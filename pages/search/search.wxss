.searchContainer {
	padding: 20rpx;
}

/* 顶部搜索框 */
.header {
	display: flex;
	justify-content: space-around;
	align-items: center;
	height: 60rpx;
	margin-top: 10rpx;
}

.inputContainer {
	flex: 1;

	display: flex;
	align-items: center;
	background-color: rgba(237,237,237, 0.3);
	margin-right: 20rpx;
	border-radius: 50rpx;
	padding: 5rpx 10rpx;
	height: 60rpx;
	line-height: 60rpx;
}

.searchInput {
	margin-left: 10rpx;
	flex: 1;
}

.placeholder {
	font-size: 26rpx;
	color: rgb(225,75,48);
}

.clearContent {
	width: 60rpx;	
	text-align: center;
}

/* 搜索内容展示 */
.showSearchContent {
	margin-top: 20rpx;
}

.searchContent {
	font-size: 28rpx;
	color: rgb(225,75,48);
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid rgb(225,75,48);
}

.resultItem {
	display: flex;
	align-items: center;
	height: 80rpx;
	line-height: 80rpx;
}

.resultItem .searchIcon {
	margin-right: 10rpx;
}

.resultItem .resultText {
	width: 100%;
	border-bottom: 1rpx solid #eee;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

/* 历史记录 */
.historyContainer {
	position: relative;
	margin: 30rpx 0;
}

.historySearch {
	display: flex;
	flex-wrap: wrap;
	margin-top: 10rpx;
}

.historyItem {
	padding: 10rpx 20rpx;
	background-color: rgb(237,237,237);
	border-radius: 30rpx;
	margin-right: 20rpx;
	margin-top: 20rpx;
	font-size: 26rpx;
}

.clearHistory {
	position: absolute;
	right: 0;
	top: 0;
	width: 60rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 40rpx;
}

/* 热搜榜 */
.hotContainer {
	margin-top: 30rpx;
}

.hotTitle {
	border-bottom: 1rpx solid #eee;
	height: 80rpx;
	line-height: 80rpx;
}

.hotList {
	display: flex;
	flex-wrap: wrap;
}

.hotItem {
	width: 50%;
	height: 80rpx;
	line-height: 80rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
}

.hotNum,
.hotName {
	margin-right: 10rpx;
}

.hotImg {
	width: 40rpx;
	height: 30rpx;
}

