.videoContainer {
	padding: 10rpx;
}

/* 头部区域 */
.header {
	display: flex;
	justify-content: space-around;
	align-items: center;
	height: 80rpx;
}

.header image {
	width: 60rpx;
	height: 60rpx;
}

.search {
	box-sizing: border-box;
	flex: 1;
	height: 80rpx;
	line-height: 80rpx;
	margin: 0 20rpx;
	color: rgb(225,75,48);
	text-align: center;
	border: 1rpx solid #f5f5f5;
	border-radius: 10rpx;
	font-size: 28rpx;
}



