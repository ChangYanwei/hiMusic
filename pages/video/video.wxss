.videoContainer {
	padding: 10rpx;
	height: 100%;
}

/* 头部区域 */
.header {
	display: flex;
	justify-content: space-around;
	align-items: center;
	height: 80rpx;
}

.header image {
	width: 60rpx;
	height: 60rpx;
}

.search {
	box-sizing: border-box;
	flex: 1;
	height: 80rpx;
	line-height: 80rpx;
	margin: 0 20rpx;
	color: rgb(225,75,48);
	text-align: center;
	border: 1rpx solid #f5f5f5;
	border-radius: 10rpx;
	font-size: 28rpx;
}

/* 导航区域 */
.navContainer {
	display: flex;
	height: 80rpx;
	white-space: nowrap;
}

.navItem {
	padding: 0 30rpx;
	font-size: 28rpx;
	height: 60rpx;
	line-height: 60rpx;
}

.active {
	border-bottom: 1rpx solid #E14B30;
}

/* 视频列表 */
.videoItem {
	padding: 0 3%;
	border-bottom: 1rpx solid #f5f5f5;
}

.videoItem video {
	width: 100%;
	height: 360rpx;
	border-radius: 10rpx;
}

.videoHeader {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 20rpx 0;
}

.creatorInfo,
.countData {
	display: flex;
	align-items: center;
}

.avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}

.nickname {
	font-size: 30rpx;
}

.countData .iconfont {
	font-size: 30rpx;
}

.praise,
.comment {
	margin-right: 20rpx;
}

.count {
	position: relative;
	bottom: 10rpx;
	font-size: 22rpx;
}

.shareBtn {
	width: 30rpx !important;
	padding: 0;
	background-color: transparent;
}

.title {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	margin: 20rpx 0;
	font-size: 26rpx;
}

.blank {
	text-align: center;
	margin-top: 20%;
}
